---
import UserProfileIsland from "./UserProfileIsland";
import ThemeToggle from "./ThemeToggle.tsx"
const links = [
  { href: "/", label: "Home" },
  { href: "https://github.com/elkolorado/wsei-programowanie-aplikacji-webowych", label: "Github" },
  { href: "mailto:vuuyadesign@gmail.com", label: "Contact" },
];
---

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container">
    <a class="navbar-brand" href="/">ManageME</a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNav"
      aria-controls="navbarNav"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto">
        {
          links.map((link) => (
            <li class="nav-item">
              <a class="nav-link" href={link.href}>
                {link.label}
              </a>
            </li>
          ))
        }
        <li class="nav-item">
          <ThemeToggle client:load />
        </li>
      </ul>
      <span class="navbar-text ms-3">
        <UserProfileIsland client:load />
      </span>
    </div>
  </div>
</nav>

<!-- Replace the theme toggle button in your navbar with: -->
